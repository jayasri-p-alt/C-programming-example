#include <stdio.h>

struct item {
    int id;
    char name[20];
    float price;
};

int main() {
    struct item it[10];
    int n=0, ch,i,search;

    while(1){
        printf("\n1.Add\n2.Display\n3.Search\n4.Exit\n");
        scanf("%d",&ch);

        if(ch==1){
            scanf("%d %s %f",&it[n].id,it[n].name,&it[n].price);
            n++;
        }
        else if(ch==2){
            for(i=0;i<n;i++)
                printf("%d %s %.2f\n",it[i].id,it[i].name,it[i].price);
        }
        else if(ch==3){
            scanf("%d",&search);
            for(i=0;i<n;i++){
                if(it[i].id==search)
                    printf("%d %s %.2f",it[i].id,it[i].name,it[i].price);
            }
        }
        else break;
    }
}